@model Apotek.ViewModels.UserVm

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
<tr>
    <th>Email</th>
    <th>Username</th>
    <th>Role</th>
</tr>
@foreach (var item in Model.Users)
{
    <tr>
        <td>@item.Email</td>
        <td>@item.UserName</td>
        <td>@item.UserRoles</td>

        @if (Request.IsAuthenticated)
        {
            <td>
                @Html.ActionLink("Edit", "Edit", 
                    new { id = item.UserId }, 
                    new {}) |
                @Html.ActionLink("Remove", "Delete",
                    new { id = item.UserId },
                    new {onclick = "return confirm('Är du säker ?');" })
            </td>
        }
    </tr>
}
</table>